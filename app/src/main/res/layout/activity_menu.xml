<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="289dp"
        android:layout_height="418dp"
        android:foregroundGravity="center"
        android:src="@drawable/logo_provisoire"
        app:layout_constraintBottom_toTopOf="@+id/surah_list_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467">


    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:fontFamily="@font/omar_bold"
        android:text="القرآن نسخة شخصية"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>



    <ImageView
        android:id="@+id/surah_list_image"
        android:layout_width="112dp"
        android:layout_height="148dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/problem_image"
        android:clickable="true"
        android:layout_width="112dp"
        android:layout_height="148dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/hist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>


    <TextView
        android:layout_width="107dp"
        android:layout_height="70dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/omar_bold"
        android:gravity="center"
        android:lineSpacingExtra="-10dp"
        android:text="الصفحات التي\nعليك مراجعتها"
        android:textColor="@color/gray"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/problem_image"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/problem_image"
        app:layout_constraintTop_toTopOf="@+id/problem_image">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/omar_bold"
        android:text="قائمة السور"
        android:textColor="@color/gray"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/surah_list_image"
        app:layout_constraintEnd_toEndOf="@+id/surah_list_image"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/surah_list_image">

    </TextView>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="112dp"
        android:layout_height="148dp"
        android:layout_marginTop="448dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="112dp"
        android:layout_height="148dp"
        android:layout_marginTop="448dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/douah_image"
        android:clickable="true"
        android:layout_width="112dp"
        android:layout_height="148dp"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/omar_bold"
        android:gravity="center"
        android:lineSpacingExtra="-10dp"
        android:text="كيف تستعمل \nتطبيقنا"

        android:textColor="@color/gray"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4">


    </TextView>

    <ImageView
        android:id="@+id/exit_image"
        android:layout_width="112dp"
        android:layout_height="148dp"
        android:layout_marginTop="448dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:src="@drawable/quitte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/omar_bold"
        android:text="الخروج"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/exit_image"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/exit_image"
        app:layout_constraintTop_toTopOf="@+id/exit_image">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>